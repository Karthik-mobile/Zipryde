<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/appBackground"
    tools:context=".SignupActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/firstnameEdit"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/rounded_edittext"
                android:hint="First Name"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:imeOptions="actionNext"
                android:paddingBottom="5dp"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:singleLine="true" />

            <EditText
                android:id="@+id/lastnameEdit"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_edittext"
                android:hint="Last Name"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:imeOptions="actionNext"
                android:singleLine="true" />

            <EditText
                android:id="@+id/phonenoEdit"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_edittext"
                android:hint="Mobile Number"
                android:inputType="phone"
                android:paddingLeft="10dp"
                android:editable="false"
                android:focusableInTouchMode="false"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:imeOptions="actionNext"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:visibility="visible" />

            <net.rimoto.intlphoneinput.IntlPhoneInput
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:textSize="14sp"
                app:textColor="@color/black_overlay"
                app:flagPaddingBottom="4dp"
                app:flagPaddingEnd="4dp"
                app:flagPaddingStart="4dp"
                app:flagPaddingTop="4dp"
                android:id="@+id/my_phone_input"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/emailaddEdit"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_edittext"
                android:hint="Email ID"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:imeOptions="actionNext"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/passwordEdit"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_edittext"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:imeOptions="actionDone"
                android:paddingBottom="5dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/confirmpasswordEdit"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_edittext"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:imeOptions="actionDone"
                android:paddingBottom="5dp"
                android:singleLine="true" />

            <Button
                android:id="@+id/signupBtn"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@color/colorAccent"
                android:text="Sign up"
                android:textColor="@color/secondaryText"
                android:textSize="18dp"  />

            <TextView
                android:id="@+id/gotoLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Already have an account?"
                android:textColor="@color/primaryText"
                android:textSize="16dp"  />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
